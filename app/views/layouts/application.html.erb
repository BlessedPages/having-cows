<!DOCTYPE html>
<html>
<head>
  <title>HavingCows</title>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Bowlby+One" />
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
</head>

<body>

  <nav class="navbar navbar-inverse navbar-fixed-top spacing" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#smallNavbar">
          <span class="sr-only">Toggle Navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <!-- <a href="#" class="navbar-brand">HavingCows</a> -->
        <div class="navbar-brand">
          <%= link_to 'HavingCows', root_path %>
        </div>
      </div> <!--end navbar-header-->
      <div class="collapse navbar-collapse" id="smallNavbar">
        <ul class="nav navbar-nav">
          <!-- <li><a href="#">Merchandise</a></li> -->
          <li><%= link_to 'Merchandise', products_path %></li>
          <!-- <li><a href="#">About</a></li> -->
          <li><%= link_to 'About', static_pages_about_path %></li>
          <!-- <li><a href="#">Gallery</a></li> -->
          <!-- <li><a href="#">Contact</a></li> -->
          <li><%= link_to 'Contact', static_pages_contact_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <% if user_signed_in? %>
              <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
            <% else %>
              <%= link_to('Login', new_user_session_path) %>
            <% end %>
          </li>
          <li>
            <%= form_tag('/products', method: 'get', class: 'nav-align') do %>
              <%= label_tag(:q, 'Search for:', class: 'sr-only') %>
              <%= text_field_tag(:q, nil, placeholder: 'search') %>
              <%= submit_tag('Go', class: 'btn') %>
            <% end %>
          </li>
        </ul>
      </div> <!-- end navbar-collapse -->
    </div> <!-- end container-fluid -->
  </nav>
  <% if notice %>
    <p id="notice" class="alert alert-info" role="alert"><%= notice %></p>
    <% end %>
  <% if alert %>
    <p id="alert" class="alert alert-warning" role="alert"><%= alert %></p>
  <% end %>

  <div id="yield-container" class="container-fluid">
    <%= yield %>
  </div>

  <footer>
    <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12 col-lg-3">
        <h3>Follow Us</h3>
        <ul class="unstyled">
         <li><a href="#">Facebook</a></li>
         <li><a href="#">Twitter</a></li>
         <li><a href="#">Instagram</a></li>
         <li><a href="#">SoundCloud</a></li>
       </ul>
     </div>
     <div class="col-xs-12 col-sm-3">
       <h3 class="heading">8</h3>
       <h4>Number of late nights this month</h4>
     </div>
     <div class="col-xs-12 col-sm-3">
      <h3 class="heading">21</h3>
      <h4>Number of Red Bull cans consumed</h4>
    </div>
    <div class="col-xs-12 col-sm-3">
      <h3 class="heading">1432</h3>
      <h4>Number of Fans at last show</h4>
    </div>
  </div> <!-- end footer row -->
  <div class="row">
    <div class="col-xs-12">
      <h6 class="copyright">Copyright &copy; 2017 Having Cows</h6>
    </div>
  </div>
  </div>
</footer>
</body>
</html>
