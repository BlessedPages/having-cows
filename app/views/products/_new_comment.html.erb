<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <%= f.label :body, "Comments", class: "sr-only" %><br>
      <%= f.text_area :body, placeholder: "Your comment..." %>
    </p>

    <p>
      <div class="rating"></div>
    </p>

    <p>
      <%= f.submit "Submit", class: "btn" %>
    </p>
  <% end %>
<% end %>
